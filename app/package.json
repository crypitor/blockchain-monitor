{
  "name": "crypitor",
  "version": "1.0.0",
  "description": "Real-time crypto monitor and alert system",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn build:app && yarn build:worker && yarn build:monitor",
    "build:app": "npx nest build onebox",
    "build:worker": "npx nest build worker-service",
    "build:monitor": "npx nest build monitor-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/apps/onebox/main",
    "start:prod:monitor-service": "node dist/apps/monitor-service/main",
    "start:prod:worker-service": "node dist/apps/worker-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/onebox/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.9",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.5",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.16",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "builder-pattern": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.12.0",
    "express-basic-auth": "^1.2.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.4.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.12",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-http-header-strategy": "^1.1.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "short-unique-id": "^5.0.3",
    "swagger-ui-express": "^5.0.0",
    "template-file": "^6.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/express": "^4.17.15",
    "@types/jest": "27.5.0",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@app/global(|/.*)$": "<rootDir>/libs/global/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@app/shared_modules(|/.*)$": "<rootDir>/libs/shared_modules/src/$1"
    }
  }
}
